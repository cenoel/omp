{% extends 'base.html.twig' %}

{% block title %}Logistique-Home{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="head clearfix">
                <div class="isw-grid"></div>
                <h1>Nombre totale des employers ( {{ pagination.getTotalItemCount }} )</h1>
            </div>
            <div class="block-fluid table-sorting clearfix">
                <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable">
                    <thead>
                    <tr>
                        <th width="25%">Nom et prénom</th>
                        <th width="25%">Date de naissance</th>
                        <th width="25%">Lieu de naissance</th>
                        <th width="25%">Carte d'Identité Nationale</th>
                        <th width="25%">Adresse</th>
                        <th width="25%">Telephone</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for employer in pagination %}
                        <tr>
                            <td>{{ employer.employerNom ~ ' ' ~ employer.employerPrenom }}</td>
                            <td>{{ employer.employerDateNaissance }}</td>
                            <td>{{ employer.employerLieuNaissance }}</td>
                            <td>{{ employer.employerCin }}</td>
                            <td>{{ employer.employerAdresse }}</td>
                            <td>{{ employer.employerTelephone }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </div>
    <script>
        $('.navigation a').addClass('btn btn-default');
    </script>
{% endblock %}
